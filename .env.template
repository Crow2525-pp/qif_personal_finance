# Environment Configuration Template
# Copy this file to .env and fill in secure values
# NEVER commit .env to version control

# System Configuration
USER_ID=1000
GRP_ID=1000
TIMEZONE=Australia/Melbourne

# PostgreSQL Database Configuration
# SECURITY: Use strong, unique passwords (min 20 characters, mixed case, numbers, symbols)
POSTGRES_CONN_STR=postgresql://postgres:CHANGE_ME_STRONG_PASSWORD@localhost:5000/personalfinance
DAGSTER_POSTGRES_HOST=dagster_postgres
DAGSTER_POSTGRES_USER=postgres
DAGSTER_POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DAGSTER_POSTGRES_PORT=5432
DAGSTER_POSTGRES_DB=personal_finance

# Dagster Configuration
DAGSTER_HOME=/docker/appdata/dagster/dagster_home
DAGSTER_APP=/docker/appdata/dagster
DAGSTER_DEPLOYMENT=prod

# DBT Configuration
DBT_PROFILE_DIR=~/.dbt
DBT_PROJECT_DIR=/docker/appdata/dagster/pipeline_personal_finance/dbt_finance

# Grafana Configuration
# SECURITY: Use strong, unique passwords for each service
GRAFANA_USER=grafanareader
GRAFANA_PASSWORD=CHANGE_ME_GRAFANA_READER_PASSWORD
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_ADMIN_PASSWORD

